{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "formex",
  "version": "0.1.0",
  "identifier": "com.formex.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "formex",
        "label": "main",
        "width": 800,
        "height": 600,
        "center": true,
        "visible": false
      },
      {
        "label": "splashscreen",
        "width": 300,
        "height": 400,
        "center": true,
        "url": "/#/splashscreen"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
